<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Painel CPD - Avançado</title>
  <link rel="stylesheet" href="/static/styles.css">
  <style>
    body { font-family: Arial, sans-serif; padding: 2rem; background: #f5f5f5; }
    h1 { color: #333; }
    table { width: 100%; border-collapse: collapse; margin-top: 1rem; }
    th, td { padding: 0.5rem; border: 1px solid #ccc; text-align: left; }
    th { background: #eee; }
    tr.active { background: #d4edda; } /* verde leve */
    tr.inactive { background: #f8d7da; } /* vermelho leve */
    form { display: inline; }
    button { padding: 0.2rem 0.5rem; margin: 0 2px; cursor: pointer; }
    .novo-aviso { margin-top: 2rem; background: #fff; padding: 1rem; border-radius: 5px; }
    .novo-aviso input[type="text"] { width: 60%; padding: 0.3rem; margin-right: 0.5rem; }
    .novo-aviso label { margin-right: 0.5rem; }
  </style>
</head>
<body>
  <h1>Painel CPD - Avançado</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Texto</th>
        <th>Status</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% avisos.forEach(aviso => { %>
        <tr class="<%= aviso.ativo ? 'active' : 'inactive' %>">
          <td><%= aviso.id %></td>
          <td><%= aviso.mensagem %></td>
          <td><%= aviso.ativo ? 'Ativo' : 'Inativo' %></td>
          <td>
            <!-- Ativar / Desativar -->
            <form action="/cpd/toggle/<%= aviso.id %>" method="POST">
              <button type="submit"><%= aviso.ativo ? 'Desativar' : 'Ativar' %></button>
            </form>

            <!-- Deletar -->
            <form action="/cpd/deletar/<%= aviso.id %>" method="POST">
              <button type="submit">Deletar</button>
            </form>

            <!-- Editar -->
            <form action="/cpd/editar/<%= aviso.id %>" method="POST" style="display:inline-block;">
              <input type="text" name="texto" value="<%= aviso.mensagem %>" required>
              <input type="checkbox" name="ativo" <%= aviso.ativo ? 'checked' : '' %>>
              <button type="submit">Salvar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Novo aviso -->
  <div class="novo-aviso">
    <h2>Criar Novo Aviso</h2>
    <form action="/cpd/novo" method="POST">
      <input type="text" name="texto" placeholder="Texto do aviso" required>
      <label>
        <input type="checkbox" name="ativo" checked> Ativo
      </label>
      <button type="submit">Criar</button>
    </form>
  </div>
</body>
</html>
